@model TrainingFPTCo.Models.AccountViewModel

@{
    ViewData["Title"] = "Account Details";
    ViewData["breadcrumb"] = "Account";
    ViewData["breadcrumb_active"] = "Detail";
    Layout = "~/Views/Shared/_LayoutAdministrator.cshtml";
}

<style>
    /* Custom CSS for Account Details view */
    .container {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-gap: 20px;
    }

    .detail-item {
        margin-bottom: 20px;
        border: 1px solid #ccc;
        padding: 10px;
    }

    .detail-label {
        font-weight: bold;
    }

    .detail-value {
        margin-left: 10px;
    }

    .btn-back {
        margin-top: 20px;
    }
</style>

<div class="container">
    <div class="column">
        @foreach (var item in Model.AccountDetailList.Take(Model.AccountDetailList.Count / 1))
        {
            <div class="detail-item">
                <div class="detail-label">ID:</div>
                <div class="detail-value">@item.Id</div>

                <div class="detail-label">Role:</div>
                <div class="detail-value">@item.Role?.Name</div>

                <div class="detail-label">Status:</div>
                <div class="detail-value">@item.Role?.Status</div>

                <div class="detail-label">Username:</div>
                <div class="detail-value">@item.Username</div>

                <div class="detail-label">Password:</div>
                <div class="detail-value">######@* @item.Password *@</div>

                <div class="detail-label">ExtraCode:</div>
                <div class="detail-value">@item.ExtraCode</div>

                <div class="detail-label">Email:</div>
                <div class="detail-value">@item.Email</div>

                <div class="detail-label">Phone:</div>
                <div class="detail-value">@item.Phone</div>

                <div class="detail-label">Address:</div>
                <div class="detail-value">@item.Address</div>

                <div class="detail-label">FullName:</div>
                <div class="detail-value">@item.FullName</div>

                <div class="detail-label">FirstName:</div>
                <div class="detail-value">@item.FirstName</div>

                <div class="detail-label">LastName:</div>
                <div class="detail-value">@item.LastName</div>
            </div>
        }
    </div>
    <div class="column">
        @foreach (var item in Model.AccountDetailList.Skip(Model.AccountDetailList.Count / 2))
        {
            <div class="detail-item">
                <div class="detail-label">Birthday:</div>
                <div class="detail-value">@item.Birthday</div>

                <div class="detail-label">Gender:</div>
                <div class="detail-value">@item.Gender</div>

                <div class="detail-label">Education:</div>
                <div class="detail-value">@item.Education</div>

                <div class="detail-label">ProgramingLanguage:</div>
                <div class="detail-value">@item.ProgramingLanguage</div>

                <div class="detail-label">ToeicScore:</div>
                <div class="detail-value">@item.ToeicScore</div>

                <div class="detail-label">Skills:</div>
                <div class="detail-value">@item.Skills</div>

                <div class="detail-label">IPCleant:</div>
                <div class="detail-value">@item.IPCleant</div>

                <div class="detail-label">LastLogin:</div>
                <div class="detail-value">@item.LastLogin</div>

                <div class="detail-label">LastLogout:</div>
                <div class="detail-value">@item.LastLogout</div>

                <div class="detail-label">Created At:</div>
                <div class="detail-value">@item.CreatedAt</div>

                <div class="detail-label">Updated At:</div>
                <div class="detail-value">@item.UpdatedAt</div>
            </div>
        }
    </div>
</div>

<a href="@Url.Action("Index")" class="btn btn-primary btn-back">Back to List</a>
